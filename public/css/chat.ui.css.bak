body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background: #f5f5f5;
    display: flex;
    flex-direction: column;
    height: 100vh;
}

#chat-header-bar {
    display: flex;
    align-items: center;
    background: #f1f1f1;
    border-bottom: 1px solid #ccc;
    padding: 5px 10px;
}

#toggle-chat-list {
    font-size: 20px;
    cursor: pointer;
    margin-right: 10px;
}

#chat-list {
    display: none;
    flex-direction: column;
    background: #fff;
    border-bottom: 1px solid #ccc;
    max-height: 300px;
    overflow-y: auto;
}

#chat-list button {
    width: 100%;
    margin: 2px 0;
    padding: 5px;
    cursor: pointer;
    text-align: left;
}

#chat-container {
    flex: 1;
    display: flex;
    flex-direction: column;
    background: #fff;
}

#messages {
    flex: 1;
    padding: 10px;
    overflow-y: auto;
}

.message {
    margin: 5px 0;
    padding: 10px 15px;
    border-radius: 20px;
    max-width: 70%;
    word-wrap: break-word;
}

.user {
    background: #0084ff;
    color: #fff;
    align-self: flex-end;
}

.bot {
    background: #e5e5ea;
    color: #000;
    align-self: flex-start;
}

#input-container {
    display: flex;
    border-top: 1px solid #ccc;
}

#input-container input {
    flex: 1;
    padding: 10px;
    border: none;
    font-size: 16px;
    outline: none;
}

#input-container button {
    padding: 10px 15px;
    border: none;
    background: #0084ff;
    color: #fff;
    cursor: pointer;
    font-size: 16px;
}

#scroll-latest-btn {
    background: #0084ff;
    color: #fff;
    border: none;
    border-radius: 5px;
    font-size: 14px;
}

#scroll-latest-btn:hover {
    background: #006fcc;
}




